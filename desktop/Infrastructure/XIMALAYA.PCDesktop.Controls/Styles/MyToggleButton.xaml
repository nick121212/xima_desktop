<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:MControls="clr-namespace:XIMALAYA.PCDesktop.Controls">

	<Style x:Key="MetroMyToggleButton" TargetType="MControls:MyToggleButton" BasedOn="{StaticResource {x:Type MControls:MyToggleButton}}">
		<Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}" />
		<Setter Property="IconFill" Value="White" />
		<Setter Property="SuperScriptSize" Value="50"/>
	</Style>

</ResourceDictionary>